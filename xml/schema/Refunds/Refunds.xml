<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
    <base>CRM/Refunds</base>
    <class>Refunds</class>
    <name>civicrm_refunds</name>
    <comment></comment>
    <log>true</log>

    <field>
        <name>id</name>
        <type>int unsigned</type>
        <required>true</required>
        <comment></comment>
    </field>
    <primaryKey>
        <name>id</name>
        <autoincrement>true</autoincrement>
    </primaryKey>
    <field>
        <name>contribution_id</name>
        <uniqueName>contribution_id</uniqueName>
        <title>Contribution ID</title>
        <type>int unsigned</type>
        <required>true</required>
        <import>true</import>
        <export>true</export>
        <comment></comment>
        <add>4.5</add>
    </field>
  
    <field>
        <name>primary_contact_id</name>
        <uniqueName>primary_contact_id</uniqueName>
        <title>Primary Contact ID</title>
        <type>int unsigned</type>
        <required>true</required>
        <import>true</import>
        <export>true</export>
        <comment></comment>
        <add>4.5</add>
    </field>
    <foreignKey>
        <name>primary_contact_id</name>
        <table>civicrm_contact</table>
        <key>id</key>
        <add>4.5</add>
        <onDelete>CASCADE</onDelete>
    </foreignKey>


    <field>
        <name>secondary_contact_id</name>
        <uniqueName>secondary_contact_id</uniqueName>
        <title>Secondary Contact ID</title>
        <type>int unsigned</type>
        <required>false</required>
        <import>true</import>
        <export>true</export>
        <comment></comment>
        <add>4.5</add>
    </field>
    <foreignKey>
        <name>secondary_contact_id</name>
        <table>civicrm_contact</table>
        <key>id</key>
        <add>4.5</add>
        <onDelete>CASCADE</onDelete>
    </foreignKey>


    <field>
        <name>email</name>
        <type>varchar</type>
        <length>255</length>
        <comment></comment>
        <title>Email</title>
        <required>true</required>
        <export>true</export>
        <uniqueName>refunds_email</uniqueName>
    </field>


    <field>
        <name>status_id</name>
        <title>Status ID</title>
        <type>int unsigned</type>
        <required>true</required>
        <comment></comment>
        <add>4.5</add>
        <export>true</export>
        <uniqueName>refunds_status_id</uniqueName>
        <pseudoconstant>
            <optionGroupName>refunds_status</optionGroupName>
        </pseudoconstant>
    </field>

    <field>
        <name>refunds_date</name>
        <type>datetime</type>
        <required>true</required>
        <title>Refunds Date</title>
        <export>true</export>
        <uniqueName>refunds_date</uniqueName>
    </field>



    <field>
        <name>total_amount</name>
        <title>Total amount</title>
        <type>decimal</type>
        <required>true</required>
        <import>true</import>
        <export>true</export>
        <comment></comment>
    </field>
    <field>
        <name>refunded_amount</name>
        <title>Refunded amount</title>
        <type>decimal</type>
        <required>true</required>
        <import>true</import>
        <export>true</export>
        <comment></comment>
    </field>
    <field>
        <name>fees_amount</name>
        <title>Fees amount</title>
        <type>decimal</type>
        <required>true</required>
        <import>true</import>
        <export>true</export>
        <comment></comment>
    </field>

    <field>
        <name>description</name>
        <type>varchar</type>
        <length>255</length>
    </field>


    <field>
        <name>note</name>
        <type>text</type>
    </field>

    <field>
        <name>adhoc_charges_note</name>
        <type>text</type>
    </field>

    <field>
        <name>participants_estimate</name>
        <type>varchar</type>
        <length>255</length>
    </field>

    <field>
        <name>participants_actual</name>
        <type>varchar</type>
        <length>255</length>
    </field>

    <field>
        <name>deducted_amount</name>
        <type>decimal</type>
    </field>

    <field>
        <name>is_full_refunded</name>
        <uniqueName>refunds_is_full_refunded</uniqueName>
        <title>Full Refunded</title>
        <type>boolean</type>
        <default>0</default>
        <import>true</import>
        <add>4.5</add>
    </field>
  
    <field>
        <name>is_partial_refunded</name>
        <uniqueName>refunds_is_partial_refunded</uniqueName>
        <title>Partial Refunded</title>
        <type>boolean</type>
        <default>0</default>
        <import>true</import>
        <add>4.5</add>
    </field>

    <field>
        <name>is_approved</name>
        <uniqueName>refunds_is_approved</uniqueName>
        <title>Approved</title>
        <type>boolean</type>
        <default>0</default>
        <import>true</import>
        <add>4.5</add>
    </field>

    <field>
        <name>is_pending</name>
        <uniqueName>refunds_is_pending</uniqueName>
        <title>Pending</title>
        <type>boolean</type>
        <default>0</default>
        <import>true</import>
        <add>4.5</add>
    </field>
  
    <field>
        <name>created_by</name>
        <type>int unsigned</type>
        <required>true</required>
    </field>

    <field>
        <name>created_date</name>
        <type>datetime</type>
        <required>true</required>
    </field>


    <field>
        <name>updated_by</name>
        <type>int unsigned</type>
        <required>true</required>
    </field>

    <field>
        <name>updated_date</name>
        <type>datetime</type>
        <required>true</required>
    </field>


</table>
